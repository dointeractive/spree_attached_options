<% unless @product.attached_option_types.empty? %>
  <h6 class='product-section-title'><%= Spree.t('attached_option_types') %></h6>
  <% @product.attached_option_types.each do |attached_option_type| %>
    <div>
      <label><%= attached_option_type.presentation %>:&nbsp;</label>
      <%= select_tag :attached_option_value, options_for_select(attached_option_type.option_values.map{ |ov| [ ov.presentation, ov.id ] }) %>
    </div>
  <% end %>
<% end %>
